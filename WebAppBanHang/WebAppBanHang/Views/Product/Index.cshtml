@model IEnumerable<WebAppBanHang.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p>
    <a class="btn btn-success" asp-action="Add">Thêm sản phẩm</a>
</p>

<table class="table table-bordered text-center align-middle">
    <thead class="table-light">
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Mô tả</th>
            <th>Ảnh sản phẩm</th>
            <th>Loại</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("N0") đ</td>
                <td>@product.Description</td>
                <td>
                    @if (product.Images != null && product.Images.Any())
                    {
                        <img src="@product.Images.First().Url"
                             alt="Ảnh sản phẩm"
                             width="80"
                             height="100"
                             style="object-fit: cover;" />
                    }
                    else
                    {
                        <span>Không có ảnh</span>
                    }
                </td>
                <td>@product.Category?.Name</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Display" asp-route-id="@product.Id">View</a>
                    <a class="btn btn-info btn-sm text-white" asp-action="Update" asp-route-id="@product.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>